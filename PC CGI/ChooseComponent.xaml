<Window x:Class="PC_CGI.ChooseComponent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_CGI"
        mc:Ignorable="d"
        Title="ChooseComponent" Height="740" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True">
    <Window.Background>
        <ImageBrush ImageSource="Images/TableBack.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="TableDG" ColumnWidth="*" Background="#99818181" Margin="4" FontSize="36" IsReadOnly="True" SelectionMode="Single" RowBackground="#00000000" HeadersVisibility="Column"/>
        <Button x:Name="Choose" Content="Выбрать" HorizontalAlignment="Left" Margin="20,11,0,15" Grid.Row="1" Width="215" FontSize="30" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Click="Choose_Click">
            <Button.Background>
                <ImageBrush ImageSource="Images/Background small.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
